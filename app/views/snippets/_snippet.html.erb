<div class="border-2 border-gray-200 p-2 mb-1 space-x-2 mt-12">
  <div>
    <h5 class=""><%= link_to snippet.name, snippet_path(snippet.uuid) %></h5>
    <h6 class="text-muted"><%= snippet.description %></h6>
  </div>
  <div>
    <p class="" onclick="document.location='<%= snippet_path(snippet.uuid) %>'">
      <%= text_area_tag "snippet_content_#{snippet.uuid}", snippet.content %>
    </p>  
  </div>
</div>
<div class="mb-10 align-middle float-right">
  <div class="flex align-middle space-x-2">
    <%= image_tag "https://source.boringavatars.com/beam/20/#{snippet.user.email}?colors=264653,2a9d8f,e9c46a,f4a261,e76f51" %> 
    <span class="text-sm text-gray-500"> Added by <%= snippet.user.email %> - <%= time_ago(snippet.updated_at) %></span>
  </div>
</div>
<script>
var codeEditor = document.getElementById("snippet_content_<%= snippet.uuid %>");
var myCodeMirror = CodeMirror.fromTextArea(codeEditor, {
    lineNumbers: false,
    mode: "<%= snippet.language %>",
    readOnly: 'nocursor',
    scrollbarStyle: null
  }
);
</script>